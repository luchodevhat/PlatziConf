<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardcornerRadius"
    app:cardElevation="@dimen/cardEelevation"
    android:layout_margin="@dimen/cardMargin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/nombreSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="@dimen/textSizeSpeaker"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/textMarginHome"
            android:gravity="center"/>
        <TextView
            android:id="@+id/trabajoSpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="trabajo"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeJobSpeaker"
            android:gravity="center"
            android:layout_marginTop="@dimen/marginTextJob"/>
        <TextView
            android:id="@+id/tvItemScheduleConferencetopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scheduleTopic"
            android:layout_gravity="center"
            android:textSize="@dimen/scheduleTag"
            android:layout_marginTop="@dimen/marginSchedule"
            android:background="@drawable/shapae_topico"
            />



    </LinearLayout>
</androidx.cardview.widget.CardView>