<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Toolbar
            android:id="@+id/toolbarConference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/platzi_conf_2"
                        android:scaleType="centerCrop"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:alpha="0.5"/>

                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/cardcornerRadius"
                    app:cardElevation="@dimen/cardEelevation"
                    android:layout_margin="@dimen/cardMargin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvInfoConfHour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/scheduleFragmentPlaceName"
                            android:textSize="@dimen/scheduleTitleAmPm"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_margin="@dimen/textMarginHome"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvPlaceUbication"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/scheduleLocation"
                            android:textSize="@dimen/textSizeJobSpeaker"
                            android:layout_margin="@dimen/textMarginHome"
                            android:textColor="@color/colorPrimary"
                            android:drawableStart="@drawable/ic_icon_place_24"
                            android:drawablePadding="@dimen/scheduleMarginIcon"
                            android:drawableTint="@color/colorPrimaryDark"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/marginHeightHome"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginLeft="@dimen/marginViewHome"
                            android:layout_marginRight="@dimen/marginViewHome"
                            android:layout_marginBottom="@dimen/marginViewHome"
                            android:layout_marginTop="@dimen/marginViewHome"/>
                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/schedulePhoneNumber"
                            android:textSize="@dimen/textSizeJobSpeaker"
                            android:layout_margin="@dimen/textMarginHome"
                            android:textColor="@color/colorPrimary"
                            android:drawableStart="@drawable/ic_icon_local_phone_24"
                            android:drawablePadding="@dimen/scheduleMarginIcon"
                            android:drawableTint="@color/colorPrimaryDark"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/marginHeightHome"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginLeft="@dimen/marginViewHome"
                            android:layout_marginRight="@dimen/marginViewHome"
                            android:layout_marginBottom="@dimen/marginViewHome"
                            android:layout_marginTop="@dimen/marginViewHome"/>
                        <TextView
                            android:id="@+id/tvWebSite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/scheduleWebSite"
                            android:textSize="@dimen/textSizeJobSpeaker"
                            android:layout_margin="@dimen/textMarginHome"
                            android:textColor="@color/colorPrimary"
                            android:drawableStart="@drawable/ic_icon_web_24"
                            android:drawablePadding="@dimen/scheduleMarginIcon"
                            android:drawableTint="@color/colorPrimaryDark"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/marginHeightHome"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginLeft="@dimen/marginViewHome"
                            android:layout_marginRight="@dimen/marginViewHome"
                            android:layout_marginBottom="@dimen/marginViewHome"
                            android:layout_marginTop="@dimen/marginViewHome"/>











                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>



